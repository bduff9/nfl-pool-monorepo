{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "add-shadcn-component": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "AWS_AK_ID",
        "AWS_R",
        "AWS_SAK_ID",
        "BACKUP_BUCKET_NAME",
        "DATABASE_URL",
        "EMAIL_FROM",
        "GOOGLE_ID",
        "GOOGLE_SECRET",
        "LOGFLARE_API_KEY",
        "LOGFLARE_SOURCE_TOKEN",
        "LOGTAIL_SOURCE_TOKEN",
        "LOGTAIL_URL",
        "NEXT_PUBLIC_ENV",
        "NEXT_PUBLIC_HAPPYKIT_ANALYTICS_KEY",
        "NEXT_PUBLIC_HAPPYKIT_FLAG_KEY",
        "NEXT_PUBLIC_LOGROCKET_PROJ",
        "NEXT_PUBLIC_LOGTAIL_SOURCE_TOKEN",
        "NEXT_PUBLIC_SENTRY_DSN",
        "NEXT_PUBLIC_SITE_URL",
        "SENTRY_AUTH_TOKEN",
        "SENTRY_SERVER_INIT_PATH",
        "TWILIO_ACCOUNT_SID",
        "TWILIO_AUTH_TOKEN",
        "TWILIO_PHONE_NUMBER",
        "domain"
      ],
      "outputs": ["apps/web/.next/**", "!apps/web/.next/cache/**", "apps/cron/cdk.out/**"]
    },
    "check-types": {},
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "format": {
      "dependsOn": ["^topo"]
    },
    "format:fix": {
      "dependsOn": ["^topo"]
    },
    "lint": {
      "dependsOn": ["^topo"]
    },
    "lint:fix": {
      "dependsOn": ["^topo"]
    },
    "topo": {
      "dependsOn": ["^topo"]
    }
  }
}
