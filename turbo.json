{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "add-shadcn-component": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["apps/web/.next/**", "!apps/web/.next/cache/**", "apps/cron/cdk.out/**"]
    },
    "check-types": {},
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "format": {
      "dependsOn": ["^topo"]
    },
    "format:fix": {
      "dependsOn": ["^topo"]
    },
    "lint": {
      "dependsOn": ["^topo"]
    },
    "lint:fix": {
      "dependsOn": ["^topo"]
    },
    "topo": {
      "dependsOn": ["^topo"]
    }
  }
}
